% odsl17.mf -- Odia slanted 17 pt parameter file
% Copyright 1996 Jeroen Hellingman

mode_setup;

input odcode;
input odbase;

gensize# := 17.28pt#; 
uh#     := 0.36pt#;             % unit height, (X-height is 25uh)
uw#     := 0.34pt#;             % unit width
rm#     := 6.0uw#;              % space in between characters
rb#     := 1.5uw#;              % extra space to right of standing bars
slant   := 0.17;                 % slant of characters
calligraphic := true;		% calligraphic effects
rot     := 30;                  % angle of pen
thick#  := 3uh#;  		% longest diameter of pen            
thin#   := 0.6uh#;  		% smallest diameter of pen

font_size               17.28pt#;
font_identifier :=      "ODSL17";

input odia;

% end of odsl17.mf
