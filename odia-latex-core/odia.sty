\selectfont}

\def\cttck{\usefont{OT1}{cttck}{m}{n}\odcommon}%
\def\cttcks{\usefont{OT1}{cttck}{m}{sl}\odcommon}%
\def\cttckb{\usefont{OT1}{cttck}{bx}{n}\odcommon}%
\def\cttckbs{\usefont{OT1}{cttck}{bx}{sl}\odcommon}%

\def\knrk{\usefont{OT1}{knrk}{m}{n}\odcommon}%
\def\knrks{\usefont{OT1}{knrk}{m}{sl}\odcommon}%
\def\knrkb{\usefont{OT1}{knrk}{bx}{n}\odcommon}%
\def\knrkbs{\usefont{OT1}{knrk}{bx}{sl}\odcommon}%

\def\@cttck#1{{\cttck\number #1}}
\def\@knrk#1{{\knrk\number #1}}
